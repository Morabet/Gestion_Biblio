<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BIBLIOTHECAIRE.Fragments.Ajouter_livre" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_selectedImage"
                android:layout_width="200dp"
                android:layout_height="270dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:background="@color/blue_sky"/>

            <Button
                android:id="@+id/btn_selectImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/ic_baseline_add_photo_alternate_24"/>

            <EditText
                android:id="@+id/tv_setTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@color/white"
                android:hint="Titre"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />
            <EditText
                android:id="@+id/tv_setAuteur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:hint="Auteur"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView511"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discipline :"
                    android:textColor="#454749"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"/>

                <Spinner
                    android:id="@+id/spinner_discipline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_description_biblio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="#454749"
                android:textSize="16sp"
                android:layout_marginTop="28dp"
                android:background="@color/white"
                android:hint="Discription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numéro d'exemplaire :"
                    android:textColor="#454749"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"/>

                <EditText
                    android:id="@+id/tv_numExemp_biblio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="numéro d'exemplaires"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:background="@color/white"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/blue_sky"
                android:clickable="true"
                android:elevation="15dp"
                android:focusable="true"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/btn_ajouterLivre"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blue_sky"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Ajouter"
                    android:textColor="@color/BlueSky"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>